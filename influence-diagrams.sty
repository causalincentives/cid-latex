    \begin{scope}[
      every node/.style = {align=left, minimum size = 4mm, circle}]
      \matrix[ampersand replacement=\&, rectangle, draw, #1,
      column sep=1mm,
      row sep=0.1mm,
      nodes=
      {%minimum height=3em,
        % draw,
        % text height=1.5ex,
        % text depth=.25ex,
        anchor=west}
      ] at (#2) {
        #3
      };
    \end{scope}
    \fi
    }
